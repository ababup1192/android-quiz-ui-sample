<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 影のレイヤー -->
    <item
        android:left="3dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#66404040" />
        </shape>
    </item>
    <!-- 枠のレイヤー -->
    <item
        android:bottom="4dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#ff3b52e2" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>